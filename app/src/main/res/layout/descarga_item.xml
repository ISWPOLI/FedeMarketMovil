<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.93"
            android:background="@drawable/background_indicadores"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LayoutSuperior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutCentral"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="18dp"
                    android:layout_height="match_parent">
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_atras"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ico_atras" />

                <LinearLayout
                    android:layout_width="17dp"
                    android:layout_height="match_parent">
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_home"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ico_home" />

                <LinearLayout
                    android:id="@+id/linearLayout10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.14"
                    android:orientation="vertical" >
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_apps"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ico_apps" />

                <ImageButton
                    android:id="@+id/btn_fedetic"
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/ico_fedetic" />

                <LinearLayout
                    android:layout_width="44dp"
                    android:layout_height="match_parent">
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutInferior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.07"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp" >

                <LinearLayout
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <AbsoluteLayout
                            android:id="@+id/AbsoluteLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:gravity="bottom">

                            <LinearLayout
                                android:id="@+id/img_descarga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical" >
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ico_update"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_launcher" />
                        </AbsoluteLayout>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/bot_descargar"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/bot_descargar" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/linearLayout8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/label_titulo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Large Text"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#AF213B"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/linearLayout010"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >

                            <TextView
                                android:id="@+id/TextView01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:text="@string/label_valoracion"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#AF213B"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical" >

                            <RatingBar
                                android:id="@+id/rating_valoracion"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:numStars="5"
                                android:progressDrawable="@drawable/fedecafe_ratingbar_small" />

                            <TextView
                                android:id="@+id/label_descargas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginTop="5dp"
                                android:text="@string/label_descargas"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#CA5D16"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="fill_parent"
                        android:layout_height="15dp"
                        android:src="@drawable/img_separador_" />

                    <LinearLayout
                        android:id="@+id/LinearLayout002"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_descripcion"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#AF213B"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ScrollView
                            android:id="@+id/scrollView1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >

                            <LinearLayout
                                android:id="@+id/linearLayout011"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="5dp" >

                                <TextView
                                    android:id="@+id/label_descripcion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TextView"
                                    android:textColor="#56382B"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        </ScrollView>

                        <ImageView
                            android:id="@+id/imageView03"
                            android:layout_width="fill_parent"
                            android:layout_height="15dp"
                            android:src="@drawable/img_separador_" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_indicadores"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/lbl_captura"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#AF213B"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView003"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img_separador_" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.02"
                            android:src="@drawable/img_separador_" />

                        <HorizontalScrollView
                            android:id="@+id/horizontalScrollView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <LinearLayout
                                android:id="@+id/descarga_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >
                            </LinearLayout>
                        </HorizontalScrollView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/LinearLayout03"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/TextView03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center"
                                android:text="@string/lbl_calificacion"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#AF213B"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <RatingBar
                                android:id="@+id/comentario_calificacion"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:gravity="right"
                                android:progressDrawable="@drawable/fedecafe_ratingbar_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/TextView04"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_marginLeft="5dp"
                                android:text="@string/lbl_comenta"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#AF213B"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/comentario_descripcion"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.4"
                            android:background="#ffffff"
                            android:inputType="textMultiLine"
                            android:textColor="#000000" >
                            <requestFocus />
                        </EditText>

                        <ImageButton
                            android:id="@+id/btn_comentar"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/btn_comentar" />

                        <TextView
                            android:id="@+id/TextView02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_comentarios"
                            android:layout_marginLeft="5dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#AF213B"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_weight="0.6"
                            android:orientation="vertical" >

                            <ListView
                                android:id="@+id/descarga_comentario_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1" >
                            </ListView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>