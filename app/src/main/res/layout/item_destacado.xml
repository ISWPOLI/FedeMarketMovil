<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/descarga_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal" android:focusable="true">


    <LinearLayout
        android:id="@+id/img_destacado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" android:layout_marginLeft="10dp">


        <TextView
            android:id="@+id/lbl_destacado_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" android:layout_marginTop="10dp" android:textColor="#CA5C05"/>


        <TextView
            android:id="@+id/lbl_destacado_descarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="10dp"
            android:textColor="#C7B29A"/>


        <RatingBar
            android:id="@+id/rating_destacado"
            android:layout_width="wrap_content"
            android:layout_height="13dp" style="?android:attr/ratingBarStyleSmall"
            android:layout_marginTop="10dp"
            android:progressDrawable="@drawable/food_ratingbar_small"
            android:rating="3" android:stepSize="1.0"/>


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="250dp"
            android:layout_height="15dp"
            android:src="@drawable/img_separador" android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/lbl_destacado_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" android:textColor="#56382B"/>

    </LinearLayout>

</LinearLayout>