<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.93"
            android:background="@drawable/background_indicadores"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LayoutSuperior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutCentral"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.14" >
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_atras"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.119"
                    android:background="@drawable/ico_atras" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.14" >
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.119"
                    android:background="@drawable/ico_home" />

                <LinearLayout
                    android:id="@+id/linearLayout10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.14"
                    android:orientation="vertical" >
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_apps"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.11"
                    android:background="@drawable/ico_apps" />

                <ImageButton
                    android:id="@+id/btn_fedetic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.11"
                    android:layout_gravity="center"
                    android:background="@drawable/ico_fedetic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.14" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutInferior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.07" >

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9" >

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.9"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/img_noticia_"
                        android:orientation="horizontal" >

                        <android.support.v4.view.ViewPager
                            android:id="@+id/banner_noticia_categoria"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:layout_weight="0.5" >
                        </android.support.v4.view.ViewPager>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout7"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/lbl_busqueda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Busqueda:"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#AF213B" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="fill_parent"
                            android:layout_height="2px"
                            android:background="@drawable/img_separador" />

                        <GridView
                            android:id="@+id/lista_contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:numColumns="1"
                            android:scrollbars="vertical"
                            android:soundEffectsEnabled="true"
                            android:stretchMode="columnWidth" >
                        </GridView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>